# Environment variables for local development
# Copy this to .env and update with your values

# Server
PORT=8080
ENVIRONMENT=development

# Database (for local development)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=app_db

# Database (GCP Cloud Run will use DB_SECRET instead)
# DB_SECRET is set automatically by Cloud Run from Secret Manager

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
